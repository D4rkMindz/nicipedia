{% extends "layout.twig" %}

{# Assets #}
{% block assets %}
    {{ assets({files: ['Home/style.css', 'Home/script.js']}) }}
{% endblock %}

{# Content #}
{% block content %}
    <div class="container">
        <div class="col">
            <div class="row justify-content-center">
                <h1>Nicipedia</h1>
            </div>
            <div class="row justify-content-center">
                <div class="btn-group" role="group" aria-label="Post sorting">
                    <button type="button" class="btn btn-lg btn-secondary" data-sort="hot">Hot</button>
                    <button type="button" class="btn btn-lg btn-secondary" data-sort="new">New</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}