{% extends "layout.twig" %}

{% block content %}
    <form method="post">
        <div class="form-group">
            <label for="username">{{ __('Username or email') }}</label>
            <input type="text"
                   class="form-control"
                   id="username"
                   placeholder="{{ __('Enter username or email') }}"
                   value="{{ username }}"
                   aria-describedby="usernameHelp">
            <small id="emailHelp" class="form-text text-muted">
                {{ __('That thing you always enter with your password') }}
            </small>
        </div>
        <div class="form-group">
            <label for="password">{{ __('Password') }}</label>
            <input type="text"
                   class="form-control"
                   id="username"
                   placeholder="{{ __('Your password') }}"
                   aria-describedby="passwordHelp">
            <small id="emailHelp" class="form-text text-muted">
                {{ __('Don\'t share this') }}
            </small>
        </div>
    </form>
{% endblock %}